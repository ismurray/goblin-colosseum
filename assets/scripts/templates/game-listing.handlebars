<table class="table table-striped table-hover table-responsive">
<tr class='header_row'>
  <td>Game ID:</td>
  <td>Game Status:</td>
  <td>Score:</td>
  <td>Round:</td>
  <td>Load Game</td>
  <td>Delete Game</td>
</tr>
<p>Unfinished games can be resumed by clicking the 'Load Game' button. Completed games cannot be resumed or deleted.</p>
{{#each games as |game|}}

 <tr data-id="{{game.id}}">
   <td>{{game.id}}</td>
   {{#unless game.over}}
   <td>Unfinished!</td>
   {{/unless}}
   {{#if game.over}}
   <td>Completed!</td>
   {{/if}}
   <td>{{game.score}}</td>
   <td>{{game.round}}</td>
   {{#unless game.over}}
   <td><button type="button" class="load-button" data-id="{{game.id}}">Load Game</button></td>
   <td><button type="button" class="delete-button" data-id="{{game.id}}">Delete Game</button></td>
   {{/unless}}
 </tr>



{{/each}}
</table>
