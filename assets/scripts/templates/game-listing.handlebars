{{#each games as |game|}}


 <!-- Developers, why are we using data-id and not just id? -->
 <ul data-id="{{game.id}}">
  <li>Game ID: {{game.id}}</li>
  <li>Over?: {{game.over}}</li>
  <li>Score:
    {{#if game.score}}
      {{game.score}}
    {{else}}
      No score listed yet.
    {{/if}}
  </li>
  <li>Player state:
    {{#if game.player_state}}
      {{game.player_state}}
    {{else}}
      No player_state listed yet.
    {{/if}}
  </li>
  <li>Goblin states:
    {{#if game.goblin_state}}
      {{game.goblin_state}}
    {{else}}
      No player_state listed yet.
    {{/if}}
  </li>
  <ul>
    <button type="button" data-id="{{game.id}}">Remove</button>
  </ul>
</ul>

{{/each}}
